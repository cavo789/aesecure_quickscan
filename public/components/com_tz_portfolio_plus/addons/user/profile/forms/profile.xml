                <option value="f">PLG_USER_PROFILE_FEMALE</option>
            </field>
            <field type="media" name="tz_portfolio_plus_user_avatar"
                    label="PLG_USER_PROFILE_AVATAR_LABEL"/>
            <field type="text" name="tz_portfolio_plus_user_twitter"
                   label="PLG_USER_PROFILE_YOUR_TWITTER_LABEL"/>
            <field type="text" name="tz_portfolio_plus_user_facebook"
                   label="PLG_USER_PROFILE_YOUR_FACEBOOK_LABEL"/>
            <field type="text" name="tz_portfolio_plus_user_instagram"
                   label="PLG_USER_PROFILE_YOUR_INSTAGRAM_LABEL"/>
            <!--<field type="text" name="tz_portfolio_plus_user_googleplus"-->
                   <!--label="PLG_USER_PROFILE_YOUR_GOOGLEPLUS_LABEL"/>-->
